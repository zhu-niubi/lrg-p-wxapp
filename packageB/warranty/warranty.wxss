/* packageB/warranty/warranty.wxss */
.page {
    display: flex;
    flex-direction: column;
    align-items: center;
    /* justify-content: center; */
    height: 100vh;
    /* Set the height of the page to fill the viewport */
}
.background {
    width: 100%;
    height: 100vh;
    position:fixed; 
    background-size:100% 100%;
        
}

.content-container {
    flex: 1;

    display: flex;
    /* justify-content: center; */

    align-items: flex-start;

    padding-top: calc(100vh / 4);
    z-index: 1;

}

.result-container {
    display: flex;
    flex-direction: column;
    gap: 14px;
}
.result-container .productSeriesArea{
    /* border: solid; */
    display: flex;
    flex-direction: column;
    margin-bottom:100rpx;
}
.productSeriesArea .productSeriesName  {
    /* border: solid; */
    margin-bottom: 20rpx;
}
.productSeriesArea .productName {
    margin-bottom: 20rpx;
}

.productSeriesArea .placeArea {
    display: flex;
    flex-direction: row;
}
.placeArea .placeName {
    /* border: solid; */
    width: 40%;
    font-size: 24rpx;
    color: #686868;
}
.placeArea .rollNum {
    font-size: 24rpx;
    color: #686868;
}

.content-row {
    display: flex;
    align-items: center;
}

.label {
    width: 80px;
    font-weight: bold;
}

.value {
    flex-grow: 1;
    /* text-decoration: underline; */
    font-size: 26rpx;
}