@import "/style/iconfont.wxss";


.page-color-tm {
    background-color: transparent !important;
}

.page-padding-a-sm {
    padding: 30rpx 30rpx 30rpx 0 !important;
}

.mg-statusBar {
    overflow: hidden;

}

.mg-navbar {
    position: fixed;
    left: 0;
    top: 0;
    right: 0;
    z-index: 9999;
    /* color: #fff; */
}

.nav {
    font-size: 32rpx;
    width: 100%;
    height: 40px;
    overflow: hidden;
    display: flex;
    justify-content: center;
    align-items: center;
}

.nav .nav-item-1 {
    flex: 2;
}

.nav .nav-item-2 {
    flex: 10;
    display: flex;
    justify-content: center;
    align-items: center;
}

.nav .nav-item.left {
    justify-content: start;
}

.nav .nav-item.left .btn {
    margin: 0;
    width: 48rpx;
    height: 48rpx;
    border: none;
    padding: 40rpx 70rpx 40rpx 30rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    z-index: 999;
}

.nav .nav-item.left .iconfont {
    font-size: 42rpx;
}

