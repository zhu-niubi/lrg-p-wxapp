/* packageA/caseList/caseList.wxss */
.page {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    background-color: #fff;
}

.page .header {
    margin-top: 170rpx;
    width: 100%;
    height: 130rpx;
    display: flex;
    flex-direction: row;
    justify-content: center;
    background-color: #fff;

}

.page .header .tab {
    margin-top: 40rpx;
    margin-left: 60rpx;
    margin-right: 60rpx;
    height: 50rpx;
    width: 100%;
    border-radius: 10rpx;
    border: 1rpx solid;
    /* box-shadow: 0rpx 0rpx 5rpx 5rpx #888888; */
}

.page .header .tab .text {
    position: relative;
    top: 5rpx;
    font-size: 25rpx;
    text-align: center;
    letter-spacing: 0.08em;
}

.page .content {
    display: flex;
    flex-direction: column;
    /* align-items: center; */
    justify-content: center;
    width: 100%;
    background-color: #fff;
}

.page .content .title {
    font-size: 35rpx;
    font-weight: bold;
    letter-spacing: 0.08em;
    margin-left: 50rpx;
    margin-bottom: 20rpx;
}

.content .caseContent {
    /* width: 100%; */
    padding: 0 40rpx;
    /* background-color: #c3c3c3; */
    /* border: solid; */
}

.content .caseContent .caseCard {
    width: 100%;
    height: 280rpx;
    /* background-color: #c3c3c3; */
    /* border: solid; */
}

.content .caseContent .caseCard .img {
    width: 300rpx;
    height: 200rpx;
    border-radius: 15rpx;
    /* border: solid; */
}

.content .caseContent .caseCard .des {
    font-size: 23rpx;
    margin-top: 10rpx;
    line-height: 1.5;
    color: #808080;
    text-align: center;
}